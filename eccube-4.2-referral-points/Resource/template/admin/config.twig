{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{ 'points_on_referral.admin.config.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'points_on_referral.admin.config.subtitle'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}
    <form method="post" action="{{ url('points_on_referral_admin_config') }}">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top"
                                         title="Tooltip">
                                        <span class="card-title">{{ 'points_on_referral.admin.config.form.title'|trans }}</span>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#basicConfig" aria-expanded="false"
                                       aria-controls="basicConfig">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="collapse show ec-cardCollapse" id="basicConfig">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <label>{{ 'points_on_referral.admin.config.form.referrer.enabled.label'|trans }}</label>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.referrer_rewards_enabled) }}
                                        {{ form_errors(form.referrer_rewards_enabled) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <label>{{ 'points_on_referral.admin.config.form.referrer.point.label'|trans }}</label>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.referrer_rewards) }}
                                        {{ form_errors(form.referrer_rewards) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <label>{{ 'points_on_referral.admin.config.form.referee.enabled.label'|trans }}</label>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.referee_rewards_enabled) }}
                                        {{ form_errors(form.referee_rewards_enabled) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <label>{{ 'points_on_referral.admin.config.form.referee.point.label'|trans }}</label>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.referee_rewards) }}
                                        {{ form_errors(form.referee_rewards) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink" href="{{ url('admin_store_plugin') }}"><i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'points_on_referral.admin.config.conversion.back'|trans }}</span></a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">{{ 'points_on_referral.admin.config.conversion.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
