{% extends '@admin/default_frame.twig' %}

{% set menus = ['pay_jp', 'pay_jp_config'] %}

{% block title %}{{ 'pay_jp.admin.config.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'pay_jp.admin.config.sub_title'|trans }}{% endblock %}

{% block stylesheet %}

{% endblock stylesheet %}

{% block main %}
    {% if licensed == 0 %}
        {% form_theme form_license '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}
            <div class="c-contentsArea__cols license_notice">
                <div class="c-contentsArea__primaryCol">
                    <div class="c-primaryCol">
                        <div class="card rounded border-0 mb-4">
                            <div class="card-header"><span>{{ 'pay_jp.admin.license.test_setting'|trans }}</span></div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3"><span>{{ 'pay_jp.admin.license.test_setting_notice'|trans }}</span></div>
                                    <div class="col mb-2">
                                        <a href="{{ url('pay_jp_admin_test_config') }}" class="btn btn-ec-conversion px-5" type="button">
                                            {{ 'pay_jp.admin.license.test_env'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form role="form" method="post">
                {{ form_widget(form_license._token) }}
                <div class="c-contentsArea__cols">
                    <div class="c-contentsArea__primaryCol">
                        <div class="c-primaryCol">
                            <div class="card rounded border-0 mb-4">
                                <div class="card-header"><span>{{ 'pay_jp.admin.license.header'|trans }}</span></div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-3"><span>{{ 'pay_jp.admin.license.license_key'|trans }}</span><span
                                                    class="badge badge-primary ml-1">{{ 'pay_jp.admin.license.required'|trans }}</span></div>
                                        <div class="col mb-2">
                                            {{ form_widget(form_license.license_key) }}
                                            {{ form_errors(form_license.license_key) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3"><span>{{ 'pay_jp.admin.license.email'|trans }}</span><span
                                                    class="badge badge-primary ml-1">{{ 'pay_jp.admin.license.required'|trans }}</span></div>
                                        <div class="col mb-2">
                                            {{ form_widget(form_license.email) }}
                                            {{ form_errors(form_license.email) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="c-conversionArea">
                    <div class="c-conversionArea__container">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-6">
                                <div class="c-conversionArea__leftBlockItem">
                                    <a class="c-beseLink"
                                    href="{{ url('admin_store_plugin') }}">
                                        <i class="fa fa-backward" aria-hidden="true"></i>
                                        <span>{{ 'pay_jp.admin.config.back'|trans }}</span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row align-items-center justify-content-end">
                                    <div class="col-auto">
                                        <button class="btn btn-ec-conversion px-5" type="submit">
                                            {{ 'pay_jp.admin.license.confirm'|trans }}
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        {% elseif licensed == 1 %}
            {% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}
                <form role="form" method="post">

                    {{ form_widget(form._token) }}
                    {% if product_licensed == 1 %}
                        <div class="c-contentsArea__cols license_notice">
                                <div class="c-contentsArea__primaryCol">
                                    <div class="c-primaryCol">
                                        <div class="card rounded border-0 mb-4">
                                            <div class="card-header"><span>{{ 'pay_jp.admin.license.notice.header'|trans }}</span></div>
                                            <div class="card-body">
                                                <div class="row">
                                                    
                                                    <div class="col mb-2">                                       
                                                            {{ 'pay_jp.admin.license.test_key_elim'|trans }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    {% endif %}
                    <div class="c-contentsArea__cols">
                        <div class="c-contentsArea__primaryCol">
                            <div class="c-primaryCol">
                                <div class="card rounded border-0 mb-4">
                                    <div class="card-header"><span>{{ 'pay_jp.admin.config.header'|trans }}</span></div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-3"><span>{{ 'pay_jp.admin.config.public_api_key'|trans }}</span><span
                                                        class="badge badge-primary ml-1">{{ 'pay_jp.admin.config.required'|trans }}</span></div>
                                            <div class="col mb-2">
                                                {{ form_widget(form.public_api_key) }}
                                                {{ form_errors(form.public_api_key) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-3"><span>{{ 'pay_jp.admin.config.api_key_secret'|trans }}</span><span
                                                        class="badge badge-primary ml-1">{{ 'pay_jp.admin.config.required'|trans }}</span></div>
                                            <div class="col mb-2">
                                                {{ form_widget(form.api_key_secret) }}
                                                {{ form_errors(form.api_key_secret) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-3"><span>{{ 'pay_jp.admin.config.charge_method'|trans }}</span></div>
                                            <div class="col mb-2">
                                                {{ form_widget(form.is_auth_and_capture_on) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-3"><span>{{ 'pay_jp.admin.config.payjp_fees_percent'|trans }}</span></div>
                                            <div class="col mb-2">
                                                {{ form_widget(form.payjp_fees_percent) }}
                                                {{ form_errors(form.payjp_fees_percent) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="c-conversionArea">
                        <div class="c-conversionArea__container">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-6">
                                    <div class="c-conversionArea__leftBlockItem">
                                        <a class="c-beseLink"
                                        href="{{ url('admin_store_plugin') }}">
                                            <i class="fa fa-backward" aria-hidden="true"></i>
                                            <span>{{ 'pay_jp.admin.config.back'|trans }}</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="row align-items-center justify-content-end">
                                        <div class="col-auto">
                                            <button class="btn btn-ec-conversion px-5"
                                                    type="submit">{{ 'pay_jp.admin.config.save'|trans }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            {% endif %}
{% endblock %}