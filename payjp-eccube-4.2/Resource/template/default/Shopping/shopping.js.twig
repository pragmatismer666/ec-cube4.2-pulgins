{% if Order.Payment.getMethodClass == 'Plugin\\PayJp\\Service\\Method\\PayJpCreditCard' %}
<script>
    $(function(){
        $("#shopping-form [type=submit]").text("決済する")
        $("#shopping-form [type=submit]").on('click', function(e){
            e.preventDefault();
            $("#shopping-form").attr('action', "{{ url('plugin_payjp_credit_card') }}").submit();
        })
    })
</script>
{% endif %}